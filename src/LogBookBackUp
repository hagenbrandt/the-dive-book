  /* position: relative; */
  background-color: #001a83;
  color: #3e64ff;
  padding: 12px;
  padding-bottom: 80px;
  gap: 12px;

  .error {
    color: #bf1650;
  }

  .error::before {
    display: inline;
    content: 'âš  ';
  }

  .form__dates__id {
    display: none;
  }

  .form__input {
    border-radius: 4px;
    background: #001a83;
    /* border: 1px solid transparent; */
    border: none;
    height: 28px;
    width: 70%;
    color: #ecfcff;
    box-shadow: inset 3px 3px 5px #00166f, inset -3px -3px 5px #001e97;
