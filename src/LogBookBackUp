const Description = styled.textarea`
  background-color: #001a83;
  color: #ecfcff;
  border: none;
  border-radius: 40px;
  padding: 12px;
  width: 95%;
  ::placeholder {
    color: rgba(62, 100, 255, 0.3);
  }
`

